// --------------- MAIN FOOTER ------------ //
// ---------------------------------------- //

.main__footer
    margin-top 25px
    padding-bottom 100px
    
    +for_breakpoint(mobile)
        margin-top 0

.main__footer__legal__text
    font-family $gotham
    border-top 1px solid $alto
    text-align center
    padding-top 30px
    font-size 10px
    line-height 12px
    color $gray
    sup
        font-size 7px
        line-height 7px
        
    +for_breakpoint(mobile)
        border-top none
        
.main__footer__nav
    display none
    background $fountain-blue
    
    +for_breakpoint(mobile)
        display block

.main__footer__link
    color $white
    display block
    position relative
    width 113px
    font-family arial 
    font-size 16px
    line-height 35px
    margin 0 auto
    font-weight bold
    margin-top 15px
    
    &:after
        content ''
        display block
        position absolute
        top 50%
        right 5px
        margin-top -3px
        border-left 4px solid transparent
        border-right 4px solid transparent
        border-bottom 6px solid $white
        
    
