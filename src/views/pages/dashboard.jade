extends ../templates/layout


block append head
    link(href='public/css/home.css', rel='stylesheet', type='text/css')

block content
    h1 this is the dashboard
    if error
        h2 #{error}

    if user
        p email: #{user.email}
        p name: #{user.name.first} #{user.name.last}
        p id: #{user.userid}
        if user.image
            p image id: #{user.image}
            img(src='file/#{user.image}/300/200', width='200')


    form(action="/upload/#{user.userid}", method="POST", enctype="multipart/form-data")
        p Select an image to upload:
        input(type="file", name="image")
        input(type="submit", value="Upload Image")

    if images
        each image in images
            img(src='file/#{image._id}/300/200', width='200')

block append footer-scripts