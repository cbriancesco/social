extends ../templates/layout


block append head
    link(href='app/css/home.css', rel='stylesheet', type='text/css')

block content
    h1 this is signup

    form(method='post', action='/signup', enctype='application/x-www-form-urlencoded')
        if exists
            .error That user exists. Are you trying to 
                a(href="/login") Login?
        if invalid
            .error Please enter a valid email address and password.

        ul
            li
                label(for='first') First Name
                input#pass(name='first', type='text')
            li
                label(for='last') Last Name
                input#pass(name='last', type='text')
            li
                label(for='email') Email
                input#email(name='email')
            li
                label(for='pass') Password
                input#pass(name='pass', type='password')
            li
                input(type='submit', value='Sign Up')

    if user
        p Name: #{user.name.first} #{user.name.last}
        p Email: #{user.email}


block append footer-scripts